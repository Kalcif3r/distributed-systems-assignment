<!-- START of myModal -->
<div id="add-inventory" class="modal" tabindex="-1" role="dialog">
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title">Add in a new type of Inventory</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="container">
        <form action="inventory/add-action" method="POST">

          <!-- START of Searchable Dropdown FOR FactoryID -->
          <div class="form-group">
            <label for="inventory-view-factoryID">Factory</label>
            <div class="ui fluid search selection dropdown">
              <input required value="" type="hidden" name="factoryID" id="inventory-view-factoryID" >
              <i class="dropdown icon"></i>
              <div class="default text">Select a Factory</div>
              <div class="menu">
                <div class="item" data-value="Goa"> Goa</div>
                <div class="item" data-value="India"> India</div>
                <div class="item" data-value="Venezuela"> Venezuela</div>
              </div>
            </div>
          </div>
          <!-- END of Searchable Dropdown -->

          <!-- START of Searchable Dropdown FOR CheeseID -->
          <div class="form-group">
            <label for="inventory-view-cheeseID">Cheese Type</label>
            <div class="ui fluid search selection dropdown">
              <input required value="" type="hidden" name="cheeseID" id="inventory-view-cheeseID" >
              <i class="dropdown icon"></i>
              <div class="default text">Select a Cheese Type</div>
              <div class="menu">
                <div class="item" data-value="Blue Cheese"> Blue Cheese</div>
                <div class="item" data-value="Gouda"> Gouda</div>
                <div class="item" data-value="Mozzarella"> Mozzarella</div>
              </div>
            </div>
          </div>
          <!-- END of Searchable Dropdown -->


          <div class="form-group">
            <label for="inventory-view-quantity-initial">Initial Quantity</label>
            <input required name="quantityIntiial"  type="number" class="form-control" id="inventory-view-quantity-initial" placeholder="Enter how much stock you're adding to stock"></input>
          </div>

          <div class="form-group">
            <label for="inventory-view-quantity-remaining">Remaining Quantity</label>
            <input required name="quantityRemaining"  type="number" class="form-control" id="inventory-view-quantity-remaining" placeholder="Enter how much stock is remaining"></input>
          </div>

          <div class="form-group">
            <label for="inventory-view-manufacturing-cost">Manufacturing Cost</label>
            <input required name="manufacturigCost"  type="number" class="form-control" id="inventory-view-manufacturing-cost" placeholder="Enter the cost of production for this batch"></input>
          </div>


          <!-- END of container -->
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-success">Submit New Record</button>
          <button type="button" class="btn btn-secondary mr-3" data-dismiss="modal">Close</button>
        </div>
    </form>
  </div>
</div>
