<div class="container">
    <h1 class="my-5">Update Factory</h1>

  <!-- START of card -->
  <div class="card">
    <div class="card-body">
      <form action="/factory/update-action" method="POST">
        <!-- NOTE: uncomment input when you're working on the API  and add the EJS-->
      <input name="id" value="<%= factory.id %>" type="hidden" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">

        <div class="form-group">
          <label class='my-label my-2 p-2' for="cheese-edit-name">New location</label>
          <input required name="factoryLocation" value="<%= factory.factoryLocation %>" type="text" class="form-control" id="factory-edit-location" aria-describedby="emailHelp" placeholder="Enter location">
        </div>
        <div class="form-group">
          <label class='my-label my-2 p-2' for="cheese-edit-description">Country</label>
            <input required name="factoryCountry" value="<%= factory.factoryCountry %>" type="text" class="form-control " id="cheese-edit-country" placeholder="Enter a country for the factory"></input>
        </div>

        <!-- CSRF Token  -->
        <input type="hidden" name="_csrf" value='<%= _csrf %>'>

        <div class="row container mt-5 mb-3">
        <button type="submit" class="btn btn-warning">Update</button>
      </form>

        <form action="/factory/archive-action" method="POST">
          <input name="id" value="<%= factory.id %>" type="hidden" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
          <button type="submit" class=" ml-1 btn btn-danger">Archive Record</button>
          <!-- CSRF Token  -->
          <input type="hidden" name="_csrf" value='<%= _csrf %>'>
        </form>
      </div>
    </div>
  </div>
  <!-- END of card -->

</div>

