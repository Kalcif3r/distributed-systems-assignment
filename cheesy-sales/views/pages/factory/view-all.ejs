  </div>
</div>

<!-- END of card -->

<!-- START of myModal -->
<div id="add-factory" class="modal" tabindex="-1" role="dialog">
<div class="modal-dialog " role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title">Add in a factory</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="container">
        <form action="factory/add-action" method="POST">
          <div class="form-group">
            <label for="factory-view-name">Location</label>
            <input required name="location" type="text" class="form-control" id="factory-view-location" aria-describedby="emailHelp" placeholder="Enter factory location">
          </div>
          <div class="form-group">
            <label for="factory-view-description">Country</label>
            <input required name="country"  type="text" class="form-control" id="factory-view-country" placeholder="Enter a country for this factory"></input>
          </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-success">Add factory</button>
          <button type="button" class="btn btn-secondary mr-3" data-dismiss="modal">Close</button>
        </div>
    </form>
  </div>
</div>
</div>
<!-- END of myModal -->
</div>

